.ug {
	position: relative;
	top: .125em; /* Addresses centering issue */
}
.ug::before {
	background-size: 1em 1em;
	content: ' ';
	display: inline-block;
	height: 1em;
	width: 1em;
}

.ug[ug-fx="spin"]::before,
.ug-spin::before {
	animation: spin 4s infinite linear;
}
.ug[ug-fx="pulse"]::before,
.ug-pulse::before {
	animation: spin 1s infinite steps(8);
}

@keyframes spin {
	0% { transform: rotate(0deg); }
	to { transform: rotate(1turn); }
}

